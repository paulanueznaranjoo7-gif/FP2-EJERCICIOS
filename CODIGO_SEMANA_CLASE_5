class Book:
    def __init__(self, name, price):
        self._name = name
        self.__price = price
        
    
    @property        #asi es como debes accdeder a una varaibe main, no puedo pner set ni get
    def name(self):
        return self._name
    
    @property    
    def price(self):
        return self.__price
    
    @name.setter
    def name(self, nombre):
        self._name = nombre
    
    @price.setter
    def price(self, price):
        if price <= 0:
            raise ValueError("El precio no puede ser menor que 0")
        self._price = price
        
    def __str__(self):
        return f"El libro {self._name} cuesta {self._price}"
        
    
        
b = Book(1864, 20)
b.name = "Ej"
print(b.name)
b.price = 20
print(b.price)
